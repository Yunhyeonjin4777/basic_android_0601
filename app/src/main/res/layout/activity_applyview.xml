<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".DetailViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="상세보기"
            android:textColor="#333333"
            android:textSize="18dp"
            android:gravity="center"
            />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#F6F6F6"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="5dp"
                android:layout_margin="3dp"
                android:padding="20dp"
                android:background="@drawable/rounded_corner_joblist"
                >
                <ImageView
                    android:id="@+id/img_cloth"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/rounded_corner_photo"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="타이틀"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    />
                <TextView
                    android:id="@+id/tv_profile_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="안녕하세요. 마늘 농사하는 윤현진입니다.\n
이번 마늘 파종 같이 하실 분 찾습니다! 제일 중요한 건 안전!"
                    android:textSize="11dp"
                    android:textColor="#878787"
                    />

                <Button
                    android:id="@+id/but_call"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rounded22_button"
                    android:fontFamily="@font/nanumsquareroundb"
                    android:layout_gravity="center"
                    android:text="전화 문의하기"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="5dp"
                android:layout_margin="3dp"
                android:padding="25dp"
                android:background="@drawable/rounded_corner_joblist"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:fontFamily="@font/nanumgothicextrabold"
                    android:text="임금"
                    android:textColor="#12B564"
                    android:textSize="20dp"
                    />

                <TextView
                    android:id="@+id/tv_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:fontFamily="@font/nanumgothicextrabold"
                    android:text="150,000"
                    android:textColor="#000000"
                    android:textSize="36dp"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    >
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="작물 정보"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textColor="#000000"
                        />
                    <TextView
                        android:id="@+id/tv_cropinfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="벼 수확"
                        android:textSize="16dp"
                        android:textColor="#575757"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    >
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="모집 인원"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textColor="#000000"
                        />
                    <TextView
                        android:id="@+id/tv_person"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="벼"
                        android:textSize="16dp"
                        android:textColor="#575757"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    >
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="작업 일정"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textColor="#000000"
                        />
                    <TextView
                        android:id="@+id/tv_datestart"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="2020/20/20"
                        android:layout_weight="8"
                        android:textSize="16dp"
                        android:textColor="#575757"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow"
                        />
                    <TextView
                        android:id="@+id/tv_dateend"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="2020/20/20"
                        android:layout_weight="8"
                        android:textSize="16dp"
                        android:textColor="#575757"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:layout_margin="3dp"
                android:elevation="5dp"
                android:padding="20dp"
                android:background="@drawable/rounded_corner_joblist"
                >
                <fragment
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:map="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context="com.example.abcd.googlemap.DetailViewActivity"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="3dp"
                android:elevation="5dp"
                android:padding="20dp"
                android:background="@drawable/rounded_corner_joblist"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:text="상세 내용"
                    android:textSize="17dp"
                    android:textColor="#000"
                    />

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="330dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:textColorHint="#C8C8C8"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:elevation="3dp"
                    android:background="@android:drawable/editbox_background"
                    />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_pay2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100,000"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="25dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 원"
            android:layout_marginRight="80dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/but_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumgothicextrabold"
            android:text="지원하기"
            android:textSize="18sp"
            android:background="@drawable/rounded_button"
            />
    </LinearLayout>

</LinearLayout>
