<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:text="회원가입"
            android:textColor="#333333"
            android:textSize="18dp"
            android:gravity="center"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="이름"
                android:textSize="17dp"
                android:textColor="#000"
                />

            <EditText
                android:id="@+id/join_name"
                android:layout_width="330dp"
                android:layout_height="55dp"
                android:hint=" 이름(실명)을 입력해주세요."
                android:textColorHint="#C8C8C8"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:elevation="3dp"
                android:background="@android:drawable/editbox_background"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="이메일"
                android:textSize="17dp"
                android:textColor="#000"
                />

            <EditText
                android:id="@+id/join_email"
                android:layout_width="330dp"
                android:layout_height="55dp"
                android:hint=" id@naver.com"
                android:textColorHint="#C8C8C8"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:elevation="3dp"
                android:background="@android:drawable/editbox_background"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="비밀번호"
                android:textSize="17dp"
                android:textColor="#000"
                />

            <EditText
                android:id="@+id/join_passwd"
                android:layout_width="330dp"
                android:layout_height="55dp"
                android:hint=" 영문+숫자 조합 8자리 이상 입력해주세요."
                android:inputType="textPassword"
                android:textColorHint="#C8C8C8"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:elevation="3dp"
                android:background="@android:drawable/editbox_background"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="비밀번호 확인"
                android:textSize="17dp"
                android:textColor="#000"
                />

            <EditText
                android:id="@+id/join_passwdcheck"
                android:layout_width="330dp"
                android:layout_height="55dp"
                android:hint=" 비밀번호를 한번 더 입력해주세요."
                android:inputType="textPassword"
                android:textColorHint="#C8C8C8"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:elevation="3dp"
                android:background="@android:drawable/editbox_background"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="전화번호"
                android:textSize="17dp"
                android:textColor="#000"
                />

            <EditText
                android:id="@+id/join_num"
                android:layout_width="330dp"
                android:layout_height="55dp"
                android:hint=" 전화번호를 입력해주세요."
                android:textColorHint="#C8C8C8"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:elevation="3dp"
                android:background="@android:drawable/editbox_background"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="소개글"
                android:textSize="17dp"
                android:textColor="#000"
                />

            <EditText
                android:id="@+id/join_content"
                android:layout_width="330dp"
                android:layout_height="55dp"
                android:hint=" 소개글을 입력해주세요."
                android:textColorHint="#C8C8C8"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:elevation="3dp"
                android:background="@android:drawable/editbox_background"
                />

        </LinearLayout>

    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/but_join"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/gradation"
        android:fontFamily="@font/nanumsquareroundb"
        android:text="회원가입"
        android:textColor="#fff"
        android:textSize="18dp"
        />

</LinearLayout>
