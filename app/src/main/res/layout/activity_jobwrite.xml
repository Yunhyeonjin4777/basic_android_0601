<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".JobWriteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:text="일감등록"
            android:textColor="#333333"
            android:textSize="18dp"
            android:gravity="center"
            />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >


            <ImageView
                android:id="@+id/img_cloth"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_photo"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="사진을 첨부하고\n
더 효과적인 구직을 해보세요!"
                android:textSize="16dp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="(대표사진 1장)"
                android:textSize="11dp"
                android:textColor="#878787"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_upload"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded22_button"
                android:fontFamily="@font/nanumsquareroundb"
                android:layout_gravity="center"
                android:text="사진 업로드"
                android:textColor="#fff"
                android:textSize="15dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="제목"
                android:textSize="17dp"
                android:textColor="#000"
                />

            <EditText
                android:id="@+id/edit_title"
                android:layout_width="330dp"
                android:layout_height="55dp"
                android:hint=" 제목을 작성해주세요."
                android:textColorHint="#C8C8C8"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:elevation="3dp"
                android:background="@android:drawable/editbox_background"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="전화번호"
                android:textSize="17dp"
                android:textColor="#000"
                />

            <EditText
                android:id="@+id/edit_num"
                android:layout_width="330dp"
                android:layout_height="55dp"
                android:hint=" 000-0000-0000"
                android:textColorHint="#C8C8C8"
                android:textColor="@color/black"
                android:inputType="number"
                android:layout_gravity="center"
                android:elevation="3dp"
                android:background="@android:drawable/editbox_background"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="작업 시작일"
                android:textSize="17dp"
                android:textColor="#000"
                />

            <EditText
                android:id="@+id/edit_datestart"
                android:layout_width="330dp"
                android:layout_height="55dp"
                android:hint=" 2021/11/03"
                android:textColorHint="#C8C8C8"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:elevation="3dp"
                android:background="@android:drawable/editbox_background"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="작업 종료일"
                android:textSize="17dp"
                android:textColor="#000"
                />

            <EditText
                android:id="@+id/edit_dateend"
                android:layout_width="330dp"
                android:layout_height="55dp"
                android:hint=" 2021/12/30"
                android:textColorHint="#C8C8C8"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:elevation="3dp"
                android:background="@android:drawable/editbox_background"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="집결지역"
                android:textSize="17dp"
                android:textColor="#000"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/but_place"
                android:layout_width="330dp"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_corner_detail"
                android:fontFamily="@font/nanumsquareroundb"
                android:layout_gravity="center"
                android:text="지도로 찾기"
                android:textColor="#d96415"
                android:textSize="15dp"
                />

            <EditText
                android:id="@+id/edit_place"
                android:layout_width="330dp"
                android:layout_height="55dp"
                android:hint=" (동,읍,면)으로 검색"
                android:inputType="number"
                android:layout_marginTop="15dp"
                android:textColorHint="#C8C8C8"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:elevation="3dp"
                android:background="@android:drawable/editbox_background"
                />

            <EditText
                android:id="@+id/edit_place2"
                android:layout_width="330dp"
                android:layout_height="55dp"
                android:hint=" 상세주소를 작성해주세요."
                android:textColorHint="#C8C8C8"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:elevation="3dp"
                android:background="@android:drawable/editbox_background"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="임금"
                android:textSize="17dp"
                android:textColor="#000"
                />

            <EditText
                android:id="@+id/edit_pay"
                android:layout_width="330dp"
                android:layout_height="55dp"
                android:hint=" 임금을 입력해주세요."
                android:inputType="number"
                android:textColorHint="#C8C8C8"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:elevation="3dp"
                android:background="@android:drawable/editbox_background"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="작물정보"
                android:textSize="17dp"
                android:textColor="#000"
                />

            <EditText
                android:id="@+id/edit_cropinfo"
                android:layout_width="330dp"
                android:layout_height="55dp"
                android:hint=" 채소 > 딸기 > 수확"
                android:textColorHint="#C8C8C8"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:elevation="3dp"
                android:background="@android:drawable/editbox_background"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="모집 인원"
                android:textSize="17dp"
                android:textColor="#000"
                />

            <EditText
                android:id="@+id/edit_person"
                android:layout_width="330dp"
                android:layout_height="55dp"
                android:hint="인원을 작성해주세요."
                android:inputType="number"
                android:textColorHint="#C8C8C8"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:elevation="3dp"
                android:background="@android:drawable/editbox_background"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="세부 내용"
                android:textSize="17dp"
                android:textColor="#000"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="요청사항 및 지원정보"
                android:textSize="11dp"
                android:textColor="#878787"
                />

            <EditText
                android:id="@+id/edit_content"
                android:layout_width="330dp"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:hint="세부내용을 작성해주세요."
                android:textColorHint="#C8C8C8"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:elevation="3dp"
                android:background="@android:drawable/editbox_background"
                />

        </LinearLayout>

    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/save_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/gradation"
        android:fontFamily="@font/nanumsquareroundb"
        android:text="일감 등록하기"
        android:textColor="#fff"
        android:textSize="18dp"
        />

</LinearLayout>


